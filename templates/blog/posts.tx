<div class="blog-content">
	<: for $posts -> $day_posts { :>
		<section class="daily-posts">
			<div class="date-box">
				<span class="num"><: $day_posts[0].date.strftime('%d') :></span>
				<span class="month"><: $day_posts[0].date.strftime('%b') :></span>
			</div>
			<: for $day_posts -> $post { :>
				<: i($post, 'teaser') :>
			<: } :>
		</section>
	<: } :>
</div>