<select id="allowed_topics" class="hide">
    <option value=""> --- </option>
    <: for $topic_list -> $topic { :>
        <option value="<: $topic.id :>">
            <: $topic.name :>
        </option>
    <: } :>
</select>

<: if $dev_milestone == 'live' || $dev_milestone == 'deprecated' { :>
    <div class="ia-single">
        <div class="ia-single__top nowrap" id="ia-single-top">
            <div class="content-wrap">
                <div id="ia-single-top-name"></div>
                <div id="ia-single-top-details" class="pull-left"></div>
                <: if $can_edit { :>
                  <div class="pull-right edit-buttons">
                    <span class="special-permissions__toggle-view" id="toggle-view">
                        <div class="pager-wrap">
                            <span class="btn-grp">
                                <span class="btn btn--wire--hero special-permissions__toggle-view__button" id="toggle-live">
                                    Live
                                </span>
                                <span class="btn btn--wire--hero special-permissions__toggle-view__button disabled" id="toggle-edited">
                                    Edited
                                </span>
                            </span>
                        </div>
                    </span>
                    
                    <span class="special-permissions <: if $dev_milestone != 'live' && $dev_milestone != 'deprecated' { :>hide<: } :>">
                        <: if $can_commit { :>
                            <div class="special-permissions__edit js-view-commits btn btn--wire--hero <: $commit_class :>" id="view_commits">Commit edits</div>
                        <: } :>
                        <div class="special-permissions__edit js-edit-enable btn btn--wire--hero" id="edit_activate">Enable edit mode</div>
                        <div class="special-permissions__static hide js-edit-disable btn btn--wire--hero" id="edit_disable">Disable edit mode</div>
                    </span>
                  </div>
                <: } :>
                <span class="clearfix"></span>
            </div>
        </div>
        
        <div class="ia-single__body content-wrap" id="ia-single-body">
            <div class="ia-single--left seventy"></div>
            <div class="ia-single--right g thirty"></div>
            <div class="ia-single--edits hide">
                <div id="row-title">
                    <h2 class="left row-title__live" id="row-title-live">
                        Live
                    </h2>
                    <h2 class="left row-title__edited" id="row-title-edited">
                        Edited
                    </h2>
                </div>
                <span class="clearfix"></span>
            </div>
        </div>
    </div>
<: } else { :>
    <: if $can_edit { :>
        <div class="dev-special-permissions__toggle-view right" id="toggle-devpage-view">
            <div class="pager-wrap">
                <span class="button-group  button-group--paging">
                    <span class="button dev-special-permissions__toggle-view__button" id="toggle-devpage-static">
                        Static
                    </span>
                    <span class="button dev-special-permissions__toggle-view__button button-nav-current disabled" id="toggle-devpage-editable">
                        Editable
                    </span>
                </span>
            </div>
        </div>
        <div class="dev-special-permissions__json button right" id="view_json">
            View as JSON
        </div>
        
        <div class="special-permissions right <: if $dev_milestone != 'live' && $dev_milestone != 'deprecated' { :>hide<: } :>">
            <: if $can_commit { :>
                <div class="special-permissions__edit js-view-commits button <: $commit_class :>" id="view_commits">Commit edits</div>
            <: } :>
            <div class="special-permissions__edit js-edit-enable button right" id="edit_activate">Enable edit mode</div>
            <div class="special-permissions__static hide js-edit-disable button right" id="edit_disable">Disable edit mode</div>
        </div>
    <: } :>

    <div class="ia-single clearfix">
        <div class="clearfix ia-single--wide"></div>
    </div>
<: } :>

