<div class="row">
	<: include translate::po::poentry { po_entry => $translation.token_language.token } :>
</div>
<div class="row">
	<img src="<: $translation.token_language.token_domain_language.language.flag_url :>" />
	<: for [0..$translation.msgstr_index_max] -> $index { :>
		<: my $func = 'msgstr' ~ $index :>
		<: if call($translation,$func) { :>
			<div class="blue fb button"><: call($translation,$func) :></div>
		<: } :>
	<: } :>
</div>