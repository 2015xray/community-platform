<: my $context_obj = $notification.event.get_context_obj :>
<: if $notification.event.context == 'DDGC::DB::Result::Token::Language::Translation' { :>
	<: include my::notifications::content::translation { translation => $context_obj } :>
<: } elsif $notification.event.context == 'DDGC::DB::Result::Token' { :>
	<: include my::notifications::content::token { token => $context_obj } :>
<: } elsif $notification.event.context == 'DDGC::DB::Result::Comment' { :>
	<: include my::notifications::content::comment { comment => $context_obj } :>
<: } else { :>
	<!-- nothing to display -->
<: } :>