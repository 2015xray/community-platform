<div class="row" style="<: if !$notification.done { :>background-color:#d8be74<: } :>">
	<div class="twothird">
		<label><: $notification.event.context :> <: $notification.event.context_id :></label>
	</div>
	<div class="third">
		<: if !$notification.done { :>
			<a href="<: $u('My::Notifications','index',{ done => $notification.id }) :>" class="button">
				Mark as done
			</a>
		<: } :>
	</div>
</div>