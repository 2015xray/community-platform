<div class="row">
	<div class="third">
		<: $field.description :>
	</div>
	<div class="twothird">
		<: include upf_edit($field) { field => $field } :>
	</div>
</div>
<: if $field.error_count { :>
	<div class="row">
		<div class="third">&nbsp;</div>
		<div class="twothird">
			<: for $field.errors -> $error { :>
				<div class="notice error"><: $error :></div>
			<: } :>
		</div>
	</div>
<: } :>