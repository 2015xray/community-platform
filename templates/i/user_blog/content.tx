<article class="blog-content post">
	<div class="date-box">
		<span class="num"><: $_.date.strftime('%d') :></span>
		<span class="month"><: $_.date.strftime('%b') :></span>
	</div>
	<section class="post-body">
		<: i($_, "header") :>
		<: r($_.html) :>
		<: i($_, "actions") :>
	</section>
	<a name="comments"></a>
	<: i('comments',$_) :>
</article>	
