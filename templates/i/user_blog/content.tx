<article class="blog-content post">
	<div class="date-box">
		<span class="num"><: $_.updated.strftime('%d') :></span>
		<span class="month"><: $_.updated.strftime('%b') :></span>
	</div>
	<section class="post-body">
		<: i($_, "header") :>
		<: r($_.html) :>
		<: i($_, "actions") :>
	</section>
	<a name="comments"></a>
	<: include "comment/comments.tx" { comments => $c.d.comments('DDGC::DB::Result::User::Blog', $_.id) } :>
</article>	
