<div class="content-box">
  <div class="content-box__head  group  head--forum">
	<div class="pull-left">
		<: include "forum/nav.tx" { current_page => 'ideas' } :>
	</div>
    <div class="pager-wrap">
      <: i($_,'pager') :>
    </div>
  </div>
  <div class="body">
    <: for results($_.paged_rs) -> $idea { :>
      <div class="row">
        <: i($idea,'teaser') :>
      </div>
    <: } :>
  </div>
</div>
