<div style="margin-bottom:1em;background-color:#ff0;" class="translations">
  <h2 style="margin:0;"><@ text @>:</h2>
  <dl>
    <@ FOR n IN [ 0..token_language.max_msgstr_index ] @>
      <@ SET func = 'msgstr' _ n @>
    <dt><@ IF n == 0 @><@ l('Singular') @><@ ELSE @><@ n @>th Plural Form<@ END @></dt>
      <dd><@ translation.$func @></dd>
    <@ END @>
  </dl>
</div>
