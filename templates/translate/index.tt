<div class="button" style="float:right">	<a href="<@ u('Help','view','translate') @>"><@ l('Instructions for our translation system') @></a></div><@ IF !c.user @>	<div class="mybox">		<@ l('You must be logged in for translating text') @>		<a href="<@ u('My','login') @>"><@ l('Login') @></a>		<a href="<@ u('My','register') @>"><@ l('Register') @></a>	</div><@ ELSE @>	<@ FOR token_context IN token_contexts.all @>		<div class="mybox">			<a href="<@ u('Translate','context',token_context.id) @>"><@ token_context.name @></a>			<@ IF token_context.description @>				<div>					<@ token_context.description @>				</div>			<@ END @>		</div>	<@ END @><@ END @>