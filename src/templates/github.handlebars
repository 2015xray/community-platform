<div class="ia-issues ia-single--info">
  <h3 class="ia-single--header left">Issues on Github</h3>
  <a id="create-issue--link" class="button right" href="https://github.com/duckduckgo/zeroclickinfo-{{repo}}/issues/new?&title={{name}}%3A%20&body=%0A%0A------%0AIA%20Page%3A%20%20http%3A%2F%2Fduck.co%2Fia%2Fview%2F{{id}}">Create Issue</a>
  {{#if issues.length}}
    <ul class="clear">
      {{#each issues}}
        <li>
          <div class="left">
            <a class="one-line" href="https://github.com/duckduckgo/zeroclickinfo-{{../repo}}/issues/{{issue_id}}">{{title}} #{{issue_id}}</a>
            {{#each tags}}
              <i class="icon-circle" style="color: #{{color}};" /> <span class="tag-name">{{name}}</span>
            {{/each}}
          </div>
          <div class="right">
            <span class="left date">created {{parse_date date}} by </span><a class="left author" href="https://github.com/{{author}}">{{author}}</a>
            <span class="clearfix"></span>
          </div>
          <span class="clearfix"></span>
        </li>
      {{/each}}
    </ul>
  {{/if}}

