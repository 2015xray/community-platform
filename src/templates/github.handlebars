<div class="ia-issues ia-single--info">
  <div class="ia-single--header">Issues on Github</div>
  {{#if issues.length}}
    <ul>
      {{#each issues}}
        <li>
          <a class="one-line" href="https://github.com/duckduckgo/zeroclickinfo-{{../repo}}/issues/{{issue_id}}">{{title}}</a>
        </li>
      {{/each}}
    </ul>
  {{/if}}

  <div class="create-issue">
    <a id="create-issue--link" href="https://github.com/duckduckgo/zeroclickinfo-{{repo}}/issues/new?&title={{name}}%3A%20&body=%0A%0A------%0AIA%20Page%3A%20%20http%3A%2F%2Fduck.co%2Fia%2Fview%2F{{id}}">Create Issue</a>
    <a href="https://github.com/duckduckgo/zeroclickinfo-{{repo}}/issues/new?&title=issue+title&body=http%3A%2F%2Fduck.co%2Fia%2Fview%2F{{id}}">
    <span class="ddgsi ddgsi-next right circle"></span>
    </a>
  </div>
</div>

