    <div class="dev_milestone-container__header container-base_info__header">
        <h3 class="dev_milestone-container__header__title mg-bottom--small">
            Description
        </h3>
    </div>

    <div class="dev_milestone-container__body container-base_info__body">
            {{#if permissions.can_edit}}
              <textarea data-panel="base_info" rows="2" cols="100" class="frm__text description js-autocommit metafield" id="description-textarea">{{live.description}}</textarea>
              {{else}}
                {{#if live.description}}
                  <div class="dev_milestone-container__body__readonly" id="description_txt">
                    {{live.description}}
                  </div>
                {{else}}
                    none
                {{/if}}
              {{/if}}
    </div>

     <div class="dev_milestone-container__header container-base_info__header">
       <h3 class="dev_milestone-container__header__title mg-top--base mg-bottom--small">
         Triggering
       </h3>
    </div>

    <div class="dev_milestone-container__body container-base_info__body">     
            {{#if permissions.can_edit}}
                <input type="text" data-panel="base_info" class="frm__input dev_milestone-container__body__input js-autocommit comma-separated triggers" id="triggers-input" value="{{live.triggers}}" />
            {{else}}
                <div class="dev_milestone-container__body__readonly {{#unless permissions.can_edit}}left{{/unless}}" id="triggers-txt">
                    {{#if live.triggers}}
                        {{#each live.triggers}}
                            {{this}}{{#unless @last}}, {{/unless}}
                        {{/each}}
                    {{else}}
                        none
                    {{/if}}
                </div>
            {{/if}} 

            <div class="dev_milestone-container__body__div {{#unless permissions.can_edit}}right{{/unless}}">
                <i data-panel="base_info" class="unsafe dev_milestone-container__body__div__checkbox {{#if permissions.can_edit}}js-autocommit{{/if}} icon-check{{#is_false live.unsafe}}-empty{{/is_false}}" id="unsafe-check"/>
                <span class="dev_milestone-container__body__readonly check-txt">
                    Requires safe search
                </span>
            </div>

            <span class="clearfix"></span>
          
        {{#if permissions.can_edit}}
            <div class="field-container twenty">
                <div class="dev_milestone-container__body__label ia-single--header">
                    TEST MACHINE
                </div>
                <span class="frm__select">
                <select data-panel="base_info" class="test_machine dev_milestone-container__body__select js-autocommit" tabindex="-1" id="test_machine-select">
                    {{#if live.test_machine}}<option value="0">{{live.test_machine}}</option>{{/if}}
                    <option value=""> --- </option>
                    {{#not_eq live.test_machine 'ddh1'}}<option value="1">ddh1</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh2'}}<option value="2">ddh2</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh3'}}<option value="3">ddh3</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh4'}}<option value="4">ddh4</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh5'}}<option value="5">ddh5</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh6'}}<option value="6">ddh6</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh7'}}<option value="7">ddh7</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh8'}}<option value="8">ddh8</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh9'}}<option value="9">ddh9</option>{{/not_eq}}
                    {{#not_eq live.test_machine 'ddh10'}}<option value="10">ddh10</option>{{/not_eq}}
                </select>
                </span>
            </div>
        {{/if}}

        <div class="field-container {{#if permissions.can_edit}}g{{/if}} half">
            {{#if permissions.can_edit}}
              <div class="dev_milestone-container__body__label ia-single--header">
                EXAMPLE QUERY
              </div>
              <input data-panel="base_info" type="text" class="frm__input example_query dev_milestone-container__body__input js-autocommit" id="example_query-input" value="{{live.example_query}}" />
              {{else}}
              {{#if live.example_query}}
                <div id="example_query-txt" class="mg-top--base">
                    <span class="ddgsi-loupe"></span>
                    {{#if live.test_machine}}
                        <a href="{{#if live.test_machine}}https://{{live.test_machine}}.duckduckgo.com/?q={{encodeURIComponent live.example_query}}{{tab_url live.tab}}{{/if}}" class="dev_milestone-container__body__readonly" id="example_query-a">
                            {{live.example_query}}
                        </a>
                    {{else}}
                        {{live.example_query}}
                    {{/if}}
                </div>
              {{/if}}
            {{/if}}
        </div>

        {{#if permissions.admin}}
            <div class="field-container g twenty">
                <div class="ia-single--header">
                    TAB NAME
                </div>
                <input data-panel="base_info" type="text" class="frm__input tab js-autocommit" id="tab-input" value="{{live.tab}}" />
            </div>
        {{/if}}
   </div> 
