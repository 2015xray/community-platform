<h2>{{original.name}} - Staged Edits</h2>

<table class="staged_edits">
    <thead>
        <tr>
            <th class="empty_th"></th>
            <th>Live</th>
            <th>Edited</th>
         </tr>
    </thead>
    
    <tbody>
        {{#if name}}
            <tr class="updates_list">
                <th>Name</th>

                <td name="name" class="item_selected" id="name_original">
                    {{original.name}}
                </td>
                <td name="name" id="name_{{name.0.time}}">{{name.0.value}}</td>
            </tr>
        {{/if}}

        {{#if status}}
            <tr class="updates_list">
                <th>Status</th>

                <td name="status" class="item_selected" id="status_original">
                    {{original.status}}
                </td>
                <td name="status" id="status_{{status.0.time}}">{{status.0.value}}</td>
            </tr>
        {{/if}}

        {{#if description}}
            <tr class="updates_list">
                <th>Description</th>

                <td name="description" class="item_selected" id="description_original">
                    {{original.description}}
                </td>
                <td name="description" id="description_{{description.0.time}}">
                    {{description.0.value}}
                </td>
            </tr>
        {{/if}}

        {{#if topic}}
            <tr class="updates_list">
                <th>Topic</th>

                <td name="topic" class="item_selected" id="topic_original">
                    {{#each original.topic}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
                <td name="topic" id="topic_{{topic.0.time}}">
                    {{#each topic.0.value}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
            </tr>
        {{/if}}

        {{#if example_query}}
            <tr class="updates_list">
                <th>Example Query</th>

                <td name="example_query" class="item_selected" id="example_query_original">
                    {{original.example_query}}
                </td>
                <td name="example_query" id="example_query_{{example_query.0.time}}">
                    {{example_query.0.value}}
                </td>
            </tr>
        {{/if}}

        {{#if other_queries}}
            <tr class="updates_list">
                <th>Other Queries</th>

                <td name="other_queries" class="item_selected" id="other_queries_original">
                    {{#each original.other_queries}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
                <td name="other_queries" id="other_queries_{{other_queries.0.time}}">
                    {{#each other_queries.0.value}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
            </tr>
        {{/if}}

        {{#if code}}
            <tr class="updates_list">
                <th>Code</th>

                <td name="code" class="item_selected" id="code_original">
                    {{#each original.code}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
                <td name="code" id="code_{{code.0.time}}">
                    {{#each code.0.value}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
            </tr>
        {{/if}}
    </tbody>
</table>

<span class="clearfix"></span>
<div class="button" id="commit">Commit</div>
