<div class="half-w left">
<h2 class="left">
    <span class="heavy">{{live_count}}</span> Live Instant Answers
</h2>
    <div class="btn--primary right"><a href="/ia">See All</a></div>
    <span class="clearfix"></span>
    
    <ul class="iap-list">
        {{#each live}}
            <li class="ia-item">
              <div class="ia_dev_milestone-{{dev_milestone}} ia_repo-{{repo}} ia-item__container">
                    
                <div class="left ia-item--stamp circle stamp--{{repo}}"></div>
                <h3 class="left ia-item--header"><a href="/ia/view/{{id}}">{{name}}</a></h3>
                <span class="clearfix"></span>
              </div>
            </li>
        {{/each}}
    </ul>
</div>

<div class="half-w right">
<h2 class="left">
    <span class="heavy">{{dev_count}}</span> New Instant Answers
</h2>
    <div class="btn--primary right"><a href="/ia/pipeline/dev">See All</a></div>
    <span class="clearfix"></span>
    
    <ul class="iap-list">
        {{#each development}}
            <li class="ia-item">
              <div class="ia_dev_milestone-{{dev_milestone}} ia_repo-{{repo}} ia-item__container">
                    
                <div class="left ia-item--stamp circle stamp--{{repo}}"></div>
                <h3 class="left ia-item--header"><a href="/ia/view/{{id}}">{{name}}</a></h3>
                <span class="clearfix"></span>
              </div>
            </li>
        {{/each}}
    </ul>
</div>

<span class="clearfix"></span>

<div id="top-issues">
    <h2 class="top-issues__title">Top Issues on GitHub</h2>
    <ul class="top-issues__list top-{{this}}">
        {{#each issues}}
            <li class="top-issues__list__item main-tag">
                <div class="list-container--left left main-tag__left">
                    <h2 class="heavy">{{name}}</h2>
                </div>
                <div class="list-container--right left main-tag__right">
                    <ul class="list-container--right__issues issues_col main-tag__right__list">
                        {{#loop_n 5 list}}
                            <li>
                                <div class="left ia-item--stamp circle stamp--{{repo}}"></div>
                                <div class="one-line left">
                                    <h5 class="issue-title">
                                        <a href="https://github.com/duckduckgo/zeroclickinfo-{{repo}}/issues/{{issue_id}}">
                                            {{title}}
                                        </a>
                                    </h5>
                                    <span class="issue-details">
                                        #{{issue_id}} opened on {{parse_date date}} by <a href="https://github.com/{{author}}">{{author}}</a> 
                                        &middot; IA Page: <a href="/ia/view/{{ia_id}}">{{ia_name}}</a>
                                    </span>
                                </div>
                                <span class="clearfix"></span>
                            </li>
                        {{/loop_n}}
                    </ul>
                </div>
                <span class="clearfix"></span>
            <li>
        {{/each}}
    </ul>
</div>
