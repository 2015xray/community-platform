

{{#each ia}}
<tr>

    <td style="width:2em; text-align:right; padding-right:1em;">
        {{@index}}
    </td>

    <td>
        <a href="/ia/view/{{id}}">{{name}}</a>
    </td>

    <td>
        {{description}}
    </td>
    <td class="ia_src_column">
        {{src_name}}
    </td>

    <td>
        {{#each topic}} <span class="ia_topic">{{this}}</span> {{/each}}
    </td>

    <td style="padding-right: 1em">
        {{dev_milestone}}
    </td>

    <td style="padding-right: 1em">
        {{repo}}
    </td>

</tr>
{{/each}}
