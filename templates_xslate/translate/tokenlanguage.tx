<form target="<: $u('Translate','tokenlanguage',$token_language.id) :>" method="post">

<div class="content-box translate-snippets">	
	<div class="head">		
		<h2><: $token_language.token_domain_language.language.name_in_english :></h2>
	</div>
	<div class="body">
		<: include "translate/tokens/token_language.tx" :>
		<div class="token-translation_inUse">
			<fieldset>
				<legend>Translation in use</legend>
				<: if $token_language.msgstr { :>
					<: include "translate/tokens/token_language_translation.tx" {translation_headline => 'Translation in use', translation => $token_language } :>
				<: } else { :>
					<p>Not yet any translation in use</p>
				<: } :>
			</fieldset>
		</div>
		<div class="row mid">
			<input type="submit" class="button blue big" name="save_translation" value="Submit translation" />
		</div>
	</div>
</div>

</form>